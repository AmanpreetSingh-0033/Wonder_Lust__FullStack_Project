<% layout("../layouts/boilerplate") %>

    <body>



        <div class="filters-wrapper px-3 py-2">
            <div class="filters d-flex align-items-center gap-3">

                <a href="/listings/filters?category=Trending">
                    <div class="filter text-center">
                        <div><i class="fa-solid fa-fire"></i></div>
                        <p>Trending</p>
                    </div>
                </a>

                <a href="/listings/filters?category=Rooms">
                    <div class="filter text-center">
                        <div><i class="fa-solid fa-bed"></i></div>
                        <p>Rooms</p>
                    </div>
                </a>
                <a href="/listings/filters?category=City">
                    <div class="filter text-center">
                        <div><i class="fa-solid fa-city"></i></div>
                        <p>City</p>
                    </div>
                </a>
                <a href="/listings/filters?category=Mountains">
                    <div class="filter text-center">
                        <div><i class="fa-solid fa-mountain-sun"></i></div>
                        <p>Mountains</p>
                    </div>
                </a>
                <a href="/listings/filters?category=Castels">
                    <div class="filter text-center">
                        <div><i class="fa-solid fa-chess-rook"></i></div>
                        <p>Castels</p>
                    </div>
                </a>
                <a href="/listings/filters?category=Pools">
                    <div class="filter text-center">
                        <div><i class="fa-solid fa-person-swimming"></i></div>
                        <p>Pools</p>
                    </div>
                </a>
                <a href="/listings/filters?category=Beaches">
                    <div class="filter text-center">
                        <div><i class="fa-solid fa-umbrella-beach"></i></div>
                        <p>Beaches</p>
                    </div>
                </a>
                <a href="/listings/filters?category=Farms">
                    <div class="filter text-center">
                        <div><i class="fa-solid fa-cow"></i></div>
                        <p>Farms</p>
                    </div>
                </a>
                <a href="/listings/filters?category=Arctic">
                    <div class="filter text-center">
                        <div><i class="fa-solid fa-snowflake"></i></div>
                        <p>Arctic</p>
                    </div>
                </a>
                <a href="/listings/filters?category=Boats">
                    <div class="filter text-center">
                        <div><i class="fa-solid fa-ship"></i></div>
                        <p>Boats</p>
                    </div>
                </a>
                <a href="/listings/filters?category=Houses">
                    <div class="filter text-center">
                        <div><i class="fa-solid fa-house"></i></div>
                        <p>Houses</p>
                    </div>
                </a>
                <a href="/listings/filters?category=Hotels">
                    <div class="filter text-center">
                        <div><i class="fa-solid fa-hotel"></i></div>
                        <p>Hotels</p>
                    </div>
                </a>
                <a href="/listings/filters?category=Kids">
                    <div class="filter text-center">
                        <div><i class="fa-solid fa-children"></i></div>
                        <p>Kids</p>
                    </div>
                </a>
                <a href="/listings/filters?category=Wonder%20Land">
                    <div class="filter text-center">
                        <div><i class="fa-solid fa-water-ladder"></i></div>
                        <p>Wonder Land</p>
                    </div>
                </a>
                <a href="/listings/filters?category=Play%20Station">
                    <div class="filter text-center">
                        <div><i class="fa-brands fa-playstation"></i></div>
                        <p>Play Station</p>
                    </div>
                </a>
                <a href="/listings/filters?category=Clubs">
                    <div class="filter text-center">
                        <div><i class="fa-solid fa-kaaba"></i></div>
                        <p>Clubs</p>
                    </div>
                </a>



            </div>
        </div>


        <div class="container mt-4">
            <div class="row">
                <% for(let listing of listings) { %>
                    <div class="col-12 col-sm-6 col-md-6 col-lg-4 col-xl-3 mb-4">
                        <div class="custom-card card h-100 border-0">
                            <a href="/listings/<%= listing._id %>" class="listingLinks text-decoration-none text-dark">
                                <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>">
                                <div class="card-body d-flex flex-column justify-content-between">
                                    <h5 class="card-title">
                                        <%= listing.title %>
                                    </h5>
                                    <div class="d-flex justify-content-between align-items-center mt-3">
                                        <small class="text-muted">
                                            <%= listing.location %>, <%= listing.country %>
                                        </small>
                                        <span class="price-tag">$<%= listing.price %></span>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                    <% } %>
            </div>
        </div>


    </body>